<%- include('../partials/header') %>

<div class="container">
	<div class="row">
		<div class="col-md-10">
			<form class="d-flex flex-column" action="/products" method="POST">

		        <div class="form-group">
		          <input class="form-control" name="title" placeholder="Product Title"
		            type="text"
		          />
		        </div>

		        <div class="form-group">
		        	<input class="form-control" type="number" min="1" step="any" name="price"
		        	placeholder="price">
		        </div>

		        <div class="form-group">
		          <textarea
		            class="form-control"
		            rows='5'
		            name='description'
		            placeholder="Describe your product..."
		          ></textarea>
		        </div>
		        <input
		          class="btn btn-outline-primary align-self-end"
		          type='submit'
		          value='Submit'
		        />
      		</form>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>